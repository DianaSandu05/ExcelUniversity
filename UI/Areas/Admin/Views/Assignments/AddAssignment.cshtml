
@{
    ViewBag.Title = "AddAssignment";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<section class="content-header">
    <h1>Add course</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item">Admin</li>
        <li class="breadcrumb-item">Course</li>
        <li class="breadcrumb-item active">Add Assignments</li>
    </ol>
</section>
<br />
<div class="card-footer">
    <button type="submit" class="btn btn-primary" onclick="window.location.href='/Admin/Courses/CourseList'">Course List</button>
</div>
<section class="content">
    <div class="row">
        <div class="col-md-9">
            @Html.Partial("~/Areas/Admin/Views/Shared/MessageForm.cshtml")
            <div class="box box-primary">
                @using (Html.BeginForm("AddAssignment", "Assignments", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.Partial("Partial/AssignmentForm")
                }
            </div>
        </div>
    </div>
</section>


