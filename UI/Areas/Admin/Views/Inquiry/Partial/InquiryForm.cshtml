@model DTO.InquiriesDTO
<div class="box-body">
    <div class="form-group">
        <label>Inquiry details</label>
        @Html.TextBoxFor(x => x.InquiryDetails, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.InquiryDetails)
    </div>
    <div class="form-group">
        <label>Course ID</label>
        @Html.TextBoxFor(x => x.CourseID, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CourseID)
    </div>
    <div class="form-group">
        <label>Student ID</label>
        @Html.TextBoxFor(x => x.StudentID, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.StudentID)
    </div>
    <input type="number" hidden name="ID" value="@Model.ID" />
    <div class="card-footer">
        <button class="btn btn-primary" type="submit">Send</button>
    </div>
</div>