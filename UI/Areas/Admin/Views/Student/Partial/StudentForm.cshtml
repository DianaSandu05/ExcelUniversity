@model DTO.StudentsDTO
<div class="box-body">
    <div class="form-group">
        <label>User Name</label>
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @placeholder = "User Name" })
        @Html.ValidationMessageFor(x => x.Username)
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })
        @Html.ValidationMessageFor(x => x.Password)
    </div>
    <div class="form-group">
        <label>First Name</label>
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @placeholder = "First Name" })
        @Html.ValidationMessageFor(x => x.FirstName)
    </div>
   
    <div class="form-group">
        <label>Last Name</label>
        @Html.TextBoxFor(x => x.SurName, new { @class = "form-control", @placeholder = "Surname" })
        @Html.ValidationMessageFor(x => x.SurName)
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label>Date of birth</label>
        @Html.TextBoxFor(x => x.DoB, new { @class = "form-control" ,type ="date2" })
        @Html.ValidationMessageFor(x => x.DoB)
    </div>
    <input type="number" hidden name="ID" value="@Model.ID" />
    <div class="card-footer">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</div>
