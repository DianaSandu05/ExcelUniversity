@model DTO.UserDTO
<div class="box-body">
    <div class="form-group">
        <label>User Name</label>
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @placeholder = "User Name" })
        @Html.ValidationMessageFor(x => x.Username)
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })
        @Html.ValidationMessageFor(x => x.Password)
    </div>
    <div class="form-group">
        <label>First Name</label>
        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", @placeholder = "First Name" })
        @Html.ValidationMessageFor(x => x.FirstName)
    </div>
    <div class="form-check">
        <label>is Admin?</label>
        @Html.DropDownList("isAdmin", new SelectList(new[] { "True", "False" }), new { @class="form-control select1"})
      
    </div>
    <div class="form-group">
        <label>Last Name</label>
        @Html.TextBoxFor(x => x.SurName, new { @class = "form-control", @placeholder = "Surname" })
        @Html.ValidationMessageFor(x => x.SurName)
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label>Role</label>
        @Html.TextBoxFor(x => x.UserRole, new { @class = "form-control", @placeholder = "Role e.g Business Consultant" })
        @Html.ValidationMessageFor(x => x.UserRole)
    </div>
    <input type="number" hidden name="ID" value="@Model.UserID" />
    <div class="card-footer">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</div>