@{
    ViewBag.Title = "UserList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model List<DTO.UserDTO>
<section class="content-header">
    <h1>User List</h1>
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item">Admin</li>
        <li class="breadcrumb-item">User</li>
        <li class="breadcrumb-item active">User List</li>
    </ol>
</section>
<br />
<div class="card-footer">
    <button type="submit" class="btn-primary" onclick="window.location.here='Admin/User/AddUser'">Add user</button>
</div>
<div class="card">
<div class="card-body">
    <table id="ShowTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>User name</th>
                <th> Email</th>
                <th> Delete </th>
                <th> Update</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr id="a_@item.UserID">
                    <td>@item.FirstName</td>
                    <td>@item.SurName</td>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td align="center" valign="middle">
                        <a href="/Admin/User/UpdateUser/@item.UserID"></a>
                    </td>
                </tr>
            </tbody>
        }
        
    </table>
  </div>
</div>
